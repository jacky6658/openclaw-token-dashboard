* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  padding: 20px;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20px;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
  overflow: hidden;
}

header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 30px;
}

header h1 {
  font-size: 2rem;
  margin-bottom: 20px;
  text-shadow: 
    0 0 10px rgba(255, 0, 128, 0.8),
    0 0 20px rgba(255, 0, 128, 0.5),
    0 0 30px rgba(0, 240, 255, 0.3);
  background: linear-gradient(90deg, #ff0080, #00f0ff, #00ff88);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  animation: neon-text 2s ease-in-out infinite;
}

@keyframes neon-text {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.8; }
}

nav {
  display: flex;
  gap: 10px;
  flex-wrap: wrap;
}

.nav-btn {
  background: rgba(255, 255, 255, 0.2);
  border: none;
  color: white;
  padding: 10px 20px;
  border-radius: 8px;
  cursor: pointer;
  font-size: 1rem;
  transition: all 0.3s;
}

.nav-btn:hover {
  background: rgba(255, 255, 255, 0.3);
  transform: translateY(-2px);
}

.nav-btn.active {
  background: white;
  color: #667eea;
  font-weight: bold;
}

main {
  padding: 30px;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 20px;
  margin-bottom: 30px;
}

.stat-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 25px;
  border-radius: 15px;
  box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
}

.stat-card h3 {
  font-size: 0.9rem;
  opacity: 0.9;
  margin-bottom: 10px;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.stat-card .value {
  font-size: 2.5rem;
  font-weight: bold;
  margin-bottom: 5px;
}

.stat-card .label {
  font-size: 0.85rem;
  opacity: 0.8;
}

.section {
  margin-bottom: 30px;
}

.section h2 {
  color: #667eea;
  margin-bottom: 20px;
  font-size: 1.5rem;
}

table {
  width: 100%;
  border-collapse: collapse;
  background: white;
  border-radius: 10px;
  overflow: hidden;
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
}

table thead {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

table th,
table td {
  padding: 15px;
  text-align: left;
}

table tbody tr:nth-child(even) {
  background: #f8f9fa;
}

table tbody tr:hover {
  background: #e9ecef;
}

.progress-bar {
  width: 100%;
  height: 25px;
  background: #e9ecef;
  border-radius: 12px;
  overflow: hidden;
  position: relative;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  transition: width 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 0.85rem;
  font-weight: bold;
}

.status-badge {
  padding: 5px 12px;
  border-radius: 20px;
  font-size: 0.85rem;
  font-weight: bold;
}

.status-ok {
  background: #d4edda;
  color: #155724;
}

.status-warning {
  background: #fff3cd;
  color: #856404;
}

.status-error {
  background: #f8d7da;
  color: #721c24;
}

.chart-container {
  background: white;
  padding: 20px;
  border-radius: 15px;
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  margin-bottom: 20px;
}

.loading {
  text-align: center;
  padding: 50px;
  color: #667eea;
  font-size: 1.2rem;
}

.error {
  background: #f8d7da;
  color: #721c24;
  padding: 20px;
  border-radius: 10px;
  margin: 20px 0;
}

/* ==================== 頂部控制面板 ==================== */
.control-panel {
  background: linear-gradient(135deg, #0a0a0a 0%, #16213e 100%);
  padding: 20px 30px;
  border-bottom: 2px solid rgba(0, 240, 255, 0.5);
  box-shadow: 0 4px 20px rgba(0, 240, 255, 0.2);
  position: relative;
}

.control-panel::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: radial-gradient(circle at 30% 50%, rgba(255, 0, 128, 0.1) 0%, transparent 50%);
  pointer-events: none;
}

.current-model-status {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 20px;
  flex-wrap: wrap;
}

.status-indicator {
  display: flex;
  align-items: center;
  gap: 12px;
}

.status-dot {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  display: inline-block;
}

.status-dot.pulsing {
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { 
    opacity: 1; 
    box-shadow: 0 0 0 0 rgba(40, 167, 69, 0.7);
  }
  50% { 
    opacity: 0.7; 
    box-shadow: 0 0 0 8px rgba(40, 167, 69, 0);
  }
}

.status-dot.status-ok {
  background: #00ff88;
  box-shadow: 0 0 10px rgba(0, 255, 136, 0.8);
}

.status-dot.status-warning {
  background: #ffaa00;
  box-shadow: 0 0 10px rgba(255, 170, 0, 0.8);
}

.status-dot.status-error {
  background: #ff0080;
  box-shadow: 0 0 10px rgba(255, 0, 128, 0.8);
}

.status-info small {
  display: block;
  font-size: 0.75rem;
  color: #00f0ff;
  margin-bottom: 2px;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.model-name {
  font-weight: bold;
  font-size: 1rem;
  color: #ffffff;
  text-shadow: 0 0 10px rgba(0, 240, 255, 0.5);
}

/* 配額圓形圖 */
.quota-quick-view {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 5px;
}

.quota-circle {
  position: relative;
  width: 60px;
  height: 60px;
}

.circular-chart {
  width: 100%;
  height: 100%;
  transform: rotate(-90deg);
}

.quota-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 0.9rem;
  font-weight: bold;
  color: #00f0ff;
  text-shadow: 0 0 5px rgba(0, 240, 255, 0.8);
}

.quota-quick-view small {
  font-size: 0.75rem;
  color: #00f0ff;
  text-transform: uppercase;
  letter-spacing: 1px;
}

/* 刷新指示器 */
.refresh-indicator {
  display: flex;
  align-items: center;
  gap: 10px;
}

.refresh-icon {
  font-size: 1.5rem;
}

.refresh-indicator small {
  display: block;
  font-size: 0.75rem;
  color: #00f0ff;
  margin-bottom: 2px;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.refresh-indicator strong {
  font-size: 1rem;
  color: #00ff88;
  font-weight: bold;
  font-variant-numeric: tabular-nums;
  text-shadow: 0 0 5px rgba(0, 255, 136, 0.5);
}

/* 按鈕 */
.btn-primary {
  background: linear-gradient(135deg, #ff0080 0%, #7928ca 100%);
  color: white;
  border: 1px solid #ff0080;
  padding: 12px 24px;
  border-radius: 8px;
  font-size: 1rem;
  font-weight: bold;
  cursor: pointer;
  transition: all 0.3s;
  box-shadow: 
    0 0 20px rgba(255, 0, 128, 0.5),
    0 4px 15px rgba(255, 0, 128, 0.3);
  position: relative;
  overflow: hidden;
  text-shadow: 0 0 5px rgba(255, 255, 255, 0.5);
}

.btn-primary::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.3) 0%, transparent 70%);
  opacity: 0;
  transition: opacity 0.3s;
}

.btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 
    0 0 30px rgba(255, 0, 128, 0.8),
    0 6px 20px rgba(255, 0, 128, 0.5);
  border-color: #00f0ff;
}

.btn-primary:hover::before {
  opacity: 1;
  animation: shine 1.5s infinite;
}

@keyframes shine {
  0% { transform: translate(-50%, -50%) rotate(0deg); }
  100% { transform: translate(-50%, -50%) rotate(360deg); }
}

.btn-primary:active {
  transform: translateY(0);
}

.btn-primary.loading {
  opacity: 0.7;
  cursor: wait;
}

.btn-primary.loading::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
  animation: loading-shimmer 1.5s infinite;
}

@keyframes loading-shimmer {
  to { left: 100%; }
}

/* 警告橫幅 */
.alert-banner {
  display: flex;
  align-items: center;
  gap: 15px;
  background: #fff3cd;
  color: #856404;
  padding: 12px 20px;
  border-radius: 8px;
  margin-top: 15px;
  border-left: 4px solid #ffc107;
}

.alert-icon {
  font-size: 1.5rem;
}

.btn-alert-action {
  background: #ffc107;
  color: #212529;
  border: none;
  padding: 6px 16px;
  border-radius: 6px;
  font-size: 0.9rem;
  font-weight: bold;
  cursor: pointer;
  margin-left: auto;
  transition: all 0.2s;
}

.btn-alert-action:hover {
  background: #ffca2c;
  transform: scale(1.05);
}

/* ==================== Modal ==================== */
.modal {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  animation: fadeIn 0.3s;
}

.modal.active {
  display: flex;
  align-items: center;
  justify-content: center;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.modal-backdrop {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(4px);
}

.modal-content {
  position: relative;
  background: linear-gradient(135deg, #0f0f0f 0%, #1a1a2e 100%);
  border-radius: 20px;
  width: 90%;
  max-width: 900px;
  max-height: 80vh;
  overflow: hidden;
  box-shadow: 
    0 0 40px rgba(255, 0, 128, 0.4),
    0 0 80px rgba(0, 240, 255, 0.3),
    0 20px 60px rgba(0, 0, 0, 0.5);
  animation: slideUp 0.3s;
  z-index: 1001;
  border: 1px solid rgba(0, 240, 255, 0.3);
}

@keyframes slideUp {
  from {
    transform: translateY(50px);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25px 30px;
  background: linear-gradient(135deg, #000000 0%, #1a1a2e 100%);
  color: white;
  border-bottom: 2px solid rgba(255, 0, 128, 0.5);
  box-shadow: 0 4px 20px rgba(255, 0, 128, 0.3);
}

.modal-header h2 {
  margin: 0;
  font-size: 1.5rem;
  text-shadow: 0 0 10px rgba(0, 240, 255, 0.6);
  background: linear-gradient(90deg, #ff0080, #00f0ff);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.close-btn {
  background: rgba(255, 255, 255, 0.2);
  border: none;
  color: white;
  font-size: 2rem;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  cursor: pointer;
  transition: all 0.2s;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.close-btn:hover {
  background: rgba(255, 255, 255, 0.3);
  transform: rotate(90deg);
}

.modal-body {
  padding: 30px;
  max-height: calc(80vh - 100px);
  overflow-y: auto;
}

/* 模型網格 */
.model-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: 20px;
  margin-bottom: 25px;
}

.model-card {
  background: linear-gradient(135deg, rgba(0, 0, 0, 0.5) 0%, rgba(26, 26, 46, 0.5) 100%);
  border-radius: 12px;
  padding: 20px;
  border: 1px solid rgba(0, 240, 255, 0.2);
  transition: all 0.3s;
  cursor: pointer;
  position: relative;
  overflow: hidden;
}

.model-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(0, 240, 255, 0.1), transparent);
  transition: left 0.5s;
}

.model-card.available {
  border-color: #00ff88;
  box-shadow: 0 0 15px rgba(0, 255, 136, 0.2);
}

.model-card.available:hover {
  border-color: #00f0ff;
  box-shadow: 
    0 0 30px rgba(0, 240, 255, 0.5),
    0 8px 25px rgba(0, 240, 255, 0.3);
  transform: translateY(-3px);
}

.model-card.available:hover::before {
  left: 100%;
}

.model-card.cooldown {
  opacity: 0.5;
  cursor: not-allowed;
  background: repeating-linear-gradient(
    45deg,
    rgba(26, 26, 46, 0.3),
    rgba(26, 26, 46, 0.3) 10px,
    rgba(15, 15, 15, 0.3) 10px,
    rgba(15, 15, 15, 0.3) 20px
  );
  border-color: rgba(255, 170, 0, 0.3);
}

.model-card.current {
  border-color: #ff0080;
  background: linear-gradient(135deg, rgba(255, 0, 128, 0.2), rgba(121, 40, 202, 0.2));
  box-shadow: 
    0 0 30px rgba(255, 0, 128, 0.5),
    0 4px 15px rgba(255, 0, 128, 0.3);
}

.model-header {
  display: flex;
  align-items: center;
  gap: 10px;
  margin-bottom: 15px;
  padding-bottom: 12px;
  border-bottom: 1px solid #e9ecef;
}

.model-header strong {
  font-size: 0.95rem;
  color: #ffffff;
  text-shadow: 0 0 5px rgba(0, 240, 255, 0.3);
}

.model-stats {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15px;
  padding: 10px;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 8px;
  gap: 10px;
  border: 1px solid rgba(0, 240, 255, 0.1);
}

.model-stat {
  text-align: center;
  flex: 1;
}

.model-stat span {
  display: block;
  font-size: 0.7rem;
  color: #00f0ff;
  margin-bottom: 4px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.model-stat strong {
  display: block;
  font-size: 1rem;
  color: #ffffff;
}

.model-stat strong.text-success {
  color: #00ff88;
  text-shadow: 0 0 5px rgba(0, 255, 136, 0.5);
}

.model-stat strong.text-warning {
  color: #ffaa00;
  text-shadow: 0 0 5px rgba(255, 170, 0, 0.5);
}

.model-stat strong.text-danger {
  color: #ff0080;
  text-shadow: 0 0 5px rgba(255, 0, 128, 0.5);
}

.btn-select {
  width: 100%;
  background: linear-gradient(135deg, #ff0080 0%, #7928ca 100%);
  color: white;
  border: 1px solid #ff0080;
  padding: 10px;
  border-radius: 8px;
  font-weight: bold;
  cursor: pointer;
  transition: all 0.2s;
  box-shadow: 0 0 15px rgba(255, 0, 128, 0.3);
}

.btn-select:hover {
  transform: scale(1.02);
  box-shadow: 
    0 0 25px rgba(255, 0, 128, 0.6),
    0 4px 15px rgba(255, 0, 128, 0.4);
  border-color: #00f0ff;
}

.btn-select:disabled {
  background: rgba(108, 117, 125, 0.3);
  cursor: not-allowed;
  opacity: 0.3;
  border-color: rgba(108, 117, 125, 0.3);
}

.btn-select:disabled:hover {
  transform: none;
  box-shadow: none;
  border-color: rgba(108, 117, 125, 0.3);
}

/* 智能推薦 */
.recommendation {
  display: flex;
  align-items: center;
  gap: 15px;
  background: linear-gradient(135deg, rgba(0, 240, 255, 0.1), rgba(255, 0, 128, 0.1));
  padding: 20px;
  border-radius: 12px;
  border-left: 4px solid #00f0ff;
  border: 1px solid rgba(0, 240, 255, 0.3);
  box-shadow: 0 0 20px rgba(0, 240, 255, 0.2);
}

.recommendation-icon {
  font-size: 2rem;
}

.recommendation strong {
  display: block;
  color: #00f0ff;
  margin-bottom: 5px;
  text-shadow: 0 0 5px rgba(0, 240, 255, 0.5);
}

.recommendation p {
  margin: 0;
  color: #ffffff;
  font-size: 0.9rem;
}

.btn-primary-sm {
  background: linear-gradient(135deg, #ff0080 0%, #7928ca 100%);
  color: white;
  border: 1px solid #ff0080;
  padding: 8px 16px;
  border-radius: 6px;
  font-size: 0.9rem;
  font-weight: bold;
  cursor: pointer;
  margin-left: auto;
  white-space: nowrap;
  transition: all 0.2s;
  box-shadow: 0 0 10px rgba(255, 0, 128, 0.3);
}

.btn-primary-sm:hover {
  transform: scale(1.05);
  box-shadow: 
    0 0 20px rgba(255, 0, 128, 0.6),
    0 4px 12px rgba(255, 0, 128, 0.4);
  border-color: #00f0ff;
}

/* ==================== Toast 通知 ==================== */
.toast-container {
  position: fixed;
  top: 20px;
  right: 20px;
  z-index: 2000;
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.toast {
  background: white;
  border-radius: 12px;
  padding: 16px 20px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  display: flex;
  align-items: center;
  gap: 12px;
  min-width: 300px;
  max-width: 400px;
  animation: slideInRight 0.3s;
  border-left: 4px solid #667eea;
}

@keyframes slideInRight {
  from {
    transform: translateX(400px);
    opacity: 0;
  }
  to {
    transform: translateX(0);
    opacity: 1;
  }
}

.toast {
  background: linear-gradient(135deg, rgba(0, 0, 0, 0.9), rgba(26, 26, 46, 0.9));
  border: 1px solid;
  backdrop-filter: blur(10px);
}

.toast.toast-success {
  border-left-color: #00ff88;
  border-color: rgba(0, 255, 136, 0.3);
  box-shadow: 0 0 20px rgba(0, 255, 136, 0.3);
}

.toast.toast-warning {
  border-left-color: #ffaa00;
  border-color: rgba(255, 170, 0, 0.3);
  box-shadow: 0 0 20px rgba(255, 170, 0, 0.3);
}

.toast.toast-error {
  border-left-color: #ff0080;
  border-color: rgba(255, 0, 128, 0.3);
  box-shadow: 0 0 20px rgba(255, 0, 128, 0.3);
}

.toast-icon {
  font-size: 1.5rem;
}

.toast-content {
  flex: 1;
}

.toast-content strong {
  display: block;
  margin-bottom: 4px;
  color: #ffffff;
  text-shadow: 0 0 5px rgba(0, 240, 255, 0.5);
}

.toast-content p {
  margin: 0;
  font-size: 0.9rem;
  color: #00f0ff;
}

.toast-close {
  background: transparent;
  border: none;
  font-size: 1.5rem;
  color: #00f0ff;
  cursor: pointer;
  width: 24px;
  height: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.2s;
}

.toast-close:hover {
  background: rgba(0, 240, 255, 0.2);
  color: #ffffff;
  box-shadow: 0 0 10px rgba(0, 240, 255, 0.5);
}

/* Cooldown 倒數計時 */
.cooldown-display {
  display: flex;
  align-items: center;
  gap: 15px;
}

.countdown-circle {
  position: relative;
  width: 80px;
  height: 80px;
}

.countdown-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 1.1rem;
  font-weight: bold;
  color: #00f0ff;
  font-variant-numeric: tabular-nums;
  text-shadow: 0 0 10px rgba(0, 240, 255, 0.8);
}

.countdown-label small {
  display: block;
  font-size: 0.85rem;
  color: #00f0ff;
  margin-bottom: 8px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.countdown-bar {
  width: 150px;
  height: 8px;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 4px;
  overflow: hidden;
  border: 1px solid rgba(0, 240, 255, 0.2);
}

.countdown-fill {
  height: 100%;
  background: linear-gradient(90deg, #ff0080 0%, #00f0ff 50%, #00ff88 100%);
  transition: width 1s linear;
  box-shadow: 0 0 10px rgba(0, 240, 255, 0.5);
}

/* ==================== 響應式設計 ==================== */
@media (max-width: 768px) {
  .control-panel {
    padding: 15px;
  }
  
